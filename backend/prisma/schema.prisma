generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  
  calendars Calendar[]
  events    Event[]
  shares    CalendarShare[]
}

model Calendar {
  id        String   @id @default(cuid())
  name      String
  color     String
  userId    String
  createdAt DateTime @default(now())
  
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  events Event[]
  shares CalendarShare[]
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?
  datetime    DateTime
  endDatetime DateTime?
  type        String
  calendarId  String
  userId      String
  createdAt   DateTime  @default(now())
  
  calendar Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CalendarShare {
  id         String @id @default(cuid())
  calendarId String
  userId     String
  permission String
  
  calendar Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([calendarId, userId])
}